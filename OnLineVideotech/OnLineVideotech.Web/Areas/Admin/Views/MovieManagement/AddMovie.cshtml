@model AddMovieViewModel;

@{
    ViewData["Title"] = "Add Movie";
}

<form asp-controller="MovieManagement" asp-action="AddMovie" method="post">
    <div class="row">
        <div class="col-md-6">
            <h4><b>Step 1:</b> Movie information</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">Movie name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VideoPath">Movie file</label>
                <input asp-for="VideoPath" type="file" class="form-control" />
                <span asp-validation-for="VideoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PosterPath">Poster</label>
                <input asp-for="PosterPath" type="url" class="form-control" />
                <span asp-validation-for="PosterPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrailerPath">Trailer</label>
                <input asp-for="TrailerPath" type="url" class="form-control" />
                <span asp-validation-for="TrailerPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary">Summary</label>
                <textarea asp-for="Summary" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <h4><b>Step 2:</b> Movie price for different types of user</h4>
            <hr />
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Role
                        </th>
                        <th>
                            Price(BGN)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Prices.Count; i++)
                    {
                        <tr>
                            <th>
                                @Model.Prices[i].Role
                            </th>
                            <th>
                                <div class="row">
                                    <div class="col-md-8">
                                        <input type="hidden" name="RoleId" value="@Model.Prices[i].Role.Id" />
                                        <div class="form-group">
                                            <input asp-for="@Model.Prices[i].Price" class="form-control" />
                                            <span asp-validation-for="@Model.Prices[i].Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <b>leva</b>
                                    </div>
                                </div>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
            <input class="btn btn-sm btn-primary" type="submit" value="Create Movie" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}