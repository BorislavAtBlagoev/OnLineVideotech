@model AddMovieViewModel;

@{
    ViewData["Title"] = "Add price to movie";
}

<hr />
<h4><b>Step 3:</b> Movie price for different types of user</h4>
<hr />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Role
            </th>
            <th>
                Price(BGN)
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Prices.Count; i++)
        {
            <tr>
                <th>
                    @Model.Prices[i].Role
                </th>
                <th>
                    <div class="row">
                        <div class="col-md-8">
                            <input type="hidden" name="RoleId" value="@Model.Prices[i].Role.Id" />
                            <div class="form-group">
                                <input asp-for="@Model.Prices[i].Price" class="form-control" />
                                <span asp-validation-for="@Model.Prices[i].Price" class="text-danger"></span>
                                <input type="hidden" asp-for="@Model.Prices[i].RoleId" value="@Model.Prices[i].Role.Id" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <b>leva</b>
                        </div>
                    </div>
                </th>
            </tr>
        }
    </tbody>
</table>