@model MovieAdminViewModel;

@{
    ViewData["Title"] = "Create movie";
}

<form asp-controller="MovieManagement" asp-action="AddMovie" method="post">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <h3>Add a new movie</h3>
            <br />
            @await Html.PartialAsync("AddMovieDescription", Model)
            @await Html.PartialAsync("AddGenreToMovie", Model)
            @await Html.PartialAsync("AddMoviePrice", Model)
            <input class="btn btn-sm btn-primary" type="submit" value="Create Movie" />
        </div>
        <div class="col-md-1">
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}